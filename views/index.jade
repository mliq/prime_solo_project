extends layout
block content
    .navbar.navbar-fixed-top
        .container
            ul.nav.nav-pills
                li
                    =title
                block admin
                li
                    a(href="/logout") LOGOUT
            //ul.nav.nav-pills.nav-stacked.navbar-right
                li
                    a(href="/logout") LOGOUT
    //p Welcome to the #{title}!
    .container.racetrack(ng-controller="IndexController")
        .row(ng-repeat="key in myData | orderBy:'-percent' | limitTo:5")
            .horse(region='{{key.region}}', ng-style='{"margin-left": "{{key.percent}}%"}')
                img(src="/images/cute_horse3.png",
                rel="popover", data-content="And here's some amazing content. It's very engaging. right?", title="{{key.region}} test", data-placement="top", popover)
            .grass
    .container(ng-controller="IndexController")
        .myTable(ui-grid="myOptions")