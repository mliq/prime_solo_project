block content
    h1= title
    p Welcome to the #{title}!
    .container(ng-controller="IndexController")
        .row(ng-repeat="region in data")
            .horse(region='{{region}}')
                img(src="/images/cute_horse3.png")
                .grass
    script(src='/vendor/angular/angular.min.js')
    script(src='/javascripts/script.js')
