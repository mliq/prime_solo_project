extends layout

block content
    h1= title
    p Welcome to the #{title}!
    .container.racetrack(ng-controller="IndexController")
        .row(ng-repeat="key in myData")
            .horse(region='{{key.region}}', style='margin-left: {{key.percent}}%')
                img(src="/images/cute_horse3.png")
            .grass
    .container(ng-controller="IndexController")
        .myTable(ui-grid="myOptions")